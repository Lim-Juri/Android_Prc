<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_top_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/my_page_top_vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/my_page_top_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/my_page_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:text="B.F(Baby_Friend)"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/my_page_main_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/baby8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/my_page_main_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_back_ground"
                android:fontFamily="@font/font2"
                android:gravity="center"
                android:padding="10dp"
                android:text="NAME : William / AGE : 6"
                android:textColor="#3C1800"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/my_page_main_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_page_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_page_main_image">

                <TextView
                    android:id="@+id/my_page_text_blood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/my_detail_text_bg"
                    android:fontFamily="@font/font2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Blood Type\nAB"
                    android:textColor="@color/brown"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toTopOf="@+id/my_page_text_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="10dp" />

                <TextView
                    android:id="@+id/my_page_text_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/my_detail_text_bg"
                    android:fontFamily="@font/font2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="NUMBER\n010-1234-5678"
                    android:textColor="@color/brown"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toTopOf="@+id/my_page_text_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/my_page_text_blood"
                    tools:layout_editor_absoluteX="10dp" />

                <TextView
                    android:id="@+id/my_page_text_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/my_detail_text_bg"
                    android:fontFamily="@font/font2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="EMAIL\nsajdfik@gmail.com"
                    android:textColor="@color/brown"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toTopOf="@+id/my_page_text_memo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/my_page_text_number"
                    tools:layout_editor_absoluteX="10dp" />

                <TextView
                    android:id="@+id/my_page_text_memo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_detail_text_bg"
                    android:fontFamily="@font/font2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="MEMO\n나는 윌리엄이에용"
                    android:textColor="@color/brown"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/my_page_text_email"
                    tools:layout_editor_absoluteX="10dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
